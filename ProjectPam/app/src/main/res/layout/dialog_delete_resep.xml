<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="50dp">

    <TextView
        android:id="@+id/deleteConfrimMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Apakah Anda yakin ingin menghapus resep ini?"
        android:textSize="22sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btDelNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="Tidak"
            android:textColor="#6A1515"
            app:strokeColor="#CB6767"
            app:strokeWidth="2dp"
            android:layout_marginEnd="50dp"/>

        <Button
            android:id="@+id/btDelYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#7B3787"
            android:text="Ya"/>
    </LinearLayout>
</LinearLayout>